{
    "compilerOptions": {
        "target": "ES2017",
        "module": "system",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "checkJs": true,
        "outDir": "./dest"
    },
    "include": [
        "src/**/*",
        "editor/src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}